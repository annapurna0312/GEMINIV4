<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="2dp">

        <LinearLayout
            android:id="@id/cardView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="10dp">

            <ImageView
                android:id="@+id/fish_image"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:src="@drawable/pomphret"
                android:scaleType="centerCrop"/>

            <TextView
                android:id="@+id/fish_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Silver Pomfret ( पापलेट ) ( Large Size)"
                android:paddingTop="5dp"
                android:paddingLeft="5dp"
                android:textStyle="bold"
                android:textColor="@color/textColorPrimary"
                android:textSize="15sp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/fish_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="₹800.00 INR*"
                    android:padding="3dp"
                    android:textColor="@color/textColorHighlighted"
                    android:textSize="14sp"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/update_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="|  Updated on 2020-30-01 15:30"
                    android:padding="5dp"
                    android:textColor="@color/textColorSecondary"
                    android:textSize="14sp"/>

                <ImageButton
                    android:id="@+id/arwBtn"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:scaleType="center"
                    android:src="@drawable/ic_expand_more_black_24dp"
                    android:background="@null"/>


            </LinearLayout>


            <androidx.cardview.widget.CardView
                android:id="@+id/expandableView"
                android:visibility="visible"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                app:cardCornerRadius="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_margin="4dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingBottom="5dp">

                        <TextView
                            android:id="@+id/market1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Balaji Market "
                            android:textSize="13dp" />

                        <TextView
                            android:id="@+id/market1_price"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="₹800.00 / kg"
                            android:textSize="13dp"/>

                        <TextView
                            android:id="@+id/market1_update_time"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="2020-31-01 15:30"
                            android:textSize="13dp"/>

                    </LinearLayout>




                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingBottom="5dp">

                        <TextView
                            android:id="@+id/market2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="RK Market "
                            android:textSize="13dp"/>

                        <TextView
                            android:id="@+id/market2_price"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="₹850.00 / kg"
                            android:textSize="13dp"
                            android:textColor="@color/textColorSecondary"/>

                        <TextView
                            android:id="@+id/market2_update_time"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="2020-30-01 14:30"
                            android:textSize="13dp"
                            android:textColor="@color/textColorSecondary"/>

                    </LinearLayout>




                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingBottom="5dp">

                        <TextView
                            android:id="@+id/market3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="C Shore Foods "
                            android:textSize="13dp"/>

                        <TextView
                            android:id="@+id/market3_price"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="₹780.00 / kg"
                            android:textSize="13dp"
                            android:textColor="@color/textColorSecondary"/>

                        <TextView
                            android:id="@+id/market3_update_time"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="2020-31-01 13:30"
                            android:textSize="13dp"
                            android:textColor="@color/textColorSecondary"/>


                    </LinearLayout>

                </LinearLayout>


            </androidx.cardview.widget.CardView>
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@android:color/darker_gray" />

        </LinearLayout>



    </androidx.cardview.widget.CardView>

</LinearLayout>